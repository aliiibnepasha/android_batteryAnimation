<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/widgetPreview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="40dp"
        android:background="@drawable/bg_rv_item"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="181:119"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />

<ImageView
    android:id="@+id/watchAdItem"
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:visibility="invisible"
    android:src="@drawable/ic_reward_ad"
    android:layout_marginHorizontal="5dp"
    android:contentDescription="@string/app_name"
    app:layout_constraintTop_toTopOf="@+id/widgetPreview"
    app:layout_constraintEnd_toEndOf="@+id/widgetPreview"/>


</androidx.constraintlayout.widget.ConstraintLayout>