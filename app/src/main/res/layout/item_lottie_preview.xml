<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/item_lottie"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:background="@drawable/bg_custome_emoji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_remove_lottie"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintBottom_toTopOf="@+id/item_lottie"
        app:layout_constraintEnd_toEndOf="@+id/item_lottie"
        app:layout_constraintStart_toEndOf="@+id/item_lottie"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/item_lottie"
        android:contentDescription="@string/app_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
