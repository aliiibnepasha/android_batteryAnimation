<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/statusBarRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="8dp"
    android:elevation="1000dp"
    android:gravity="center_vertical">

    <!-- Time -->
    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical"
        android:visibility="visible" />

    <!-- Date (optional, can hide/show) -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <!-- Battery Icon -->
    <ImageView
        android:id="@+id/batteryIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/app_name"
        android:src="@android:drawable/ic_lock_power_off"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        android:visibility="visible" />

    <!-- Battery Percent -->
    <TextView
        android:id="@+id/batteryPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:visibility="visible" />

    <!-- Space pushes right side -->
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- Lottie Animation (hidden by default, visible via code) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        app:lottie_autoPlay="true"
        android:layout_gravity="center_vertical"
        app:lottie_repeatMode="reverse"
        app:lottie_repeatCount="1000"
        android:visibility="gone" />

    <!-- Custom Drawable/Icon (hidden by default, visible via code) -->
    <ImageView
        android:id="@+id/customIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <!-- WiFi -->
    <ImageView
        android:id="@+id/wifiIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="@string/app_name"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="visible" />

    <!-- Hotspot -->
    <ImageView
        android:id="@+id/hotspotIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_share"
        android:contentDescription="@string/app_name"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <!-- Data -->
    <ImageView
        android:id="@+id/dataIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/app_name"
        android:src="@android:drawable/stat_sys_upload"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <!-- Signal -->
    <ImageView
        android:id="@+id/signalIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_lock_lock"
        app:tint="#FFFFFF"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="visible" />

    <!-- Airplane -->
    <ImageView
        android:id="@+id/airplaneIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_compass"
        app:tint="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />
</LinearLayout>