<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".ui.InteractiveLottieActivity">

    <com.lowbyte.battery.animation.custom.InteractiveLottieView
        android:id="@+id/lottie_canvas"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#DDDDDD" />

    <SeekBar
        android:id="@+id/size_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="200" />

    <SeekBar
        android:id="@+id/rotation_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="360" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button android:id="@+id/btn_move_top" android:text="↑" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <Button android:id="@+id/btn_move_bottom" android:text="↓" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <Button android:id="@+id/btn_move_left" android:text="←" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <Button android:id="@+id/btn_move_right" android:text="→" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Lottie"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_remove_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Selected"
        android:layout_marginTop="6dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lotties"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_all_lotties"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        />

</LinearLayout>
