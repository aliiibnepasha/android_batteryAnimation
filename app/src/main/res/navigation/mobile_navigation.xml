<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.lowbyte.battery.animation.SplashFragment"
        android:label="Splash" >
        <action
            android:id="@+id/action_splash_to_language"
            app:destination="@id/languageFragment" />
    </fragment>

    <fragment
        android:id="@+id/languageFragment"
        android:name="LanguageFragment"
        android:label="Select Language" >
        <action
            android:id="@+id/action_language_to_intro"
            app:destination="@id/introFragment" />
    </fragment>

    <fragment
        android:id="@+id/introFragment"
        android:name="com.lowbyte.battery.animation.IntroFragment"
        android:label="Intro Screens" >
        <action
            android:id="@+id/action_intro_to_getStarted"
            app:destination="@id/getStartedFragment" />
    </fragment>

    <fragment
        android:id="@+id/getStartedFragment"
        android:name="com.lowbyte.battery.animation.GetStartedFragment"
        android:label="Get Started" />
</navigation>